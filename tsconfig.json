{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "bundler",

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node", "obsidian"],

    "inlineSourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
